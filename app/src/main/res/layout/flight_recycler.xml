<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cardview_activity"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="20dp"
    android:backgroundTint="@color/gray">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:id="@+id/ll_flights"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10sp"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/dep_airport"
                    android:textSize="25sp"
                    android:fontFamily="@font/athitisemibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAX"/>

                <TextView
                    android:textColor="@color/dark_gray"
                    android:id="@+id/dep_date"
                    android:fontFamily="@font/athitimedium"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.30am - May 04"/>

            </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_gravity="center"
               android:gravity="center">

               <TextView
                   android:textColor="@color/light_gray"
                   android:id="@+id/flight_lenght"
                   android:fontFamily="@font/athitimedium"
                   android:textSize="10sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="13h 5m"/>

               <View
                   android:layout_width="100dp"
                   android:layout_height="2dp"
                   android:background="@drawable/gray_line"/>

               <TextView
                   android:textColor="@color/light_gray"
                   android:id="@+id/layovers"
                   android:fontFamily="@font/athitimedium"
                   android:textSize="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Direct"/>

           </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/arr_airport"
                    android:fontFamily="@font/athitisemibold"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GIG"/>

                <TextView
                    android:textColor="@color/dark_gray"
                    android:id="@+id/arr_date"
                    android:fontFamily="@font/athitimedium"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.30pm - May 04"/>

            </LinearLayout>

            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/price"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/athitisemibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400"/>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>